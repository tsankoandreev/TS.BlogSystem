@model List<TS.BlogSystem.Web.Models.CategoryViewModel>


<h5 class="card-header">Categories</h5>
<div class="card-body">
    <ul class="list-unstyled mb-0 row">

        @for (int i = 0; i < Model.Count; i++)
        {
            <text>
                <li class="list-item col-6">
                    <a asp-area="" asp-controller="Posts" asp-action="GetByCategory" asp-route-categoryId="@Model[i].Id">@Model[i].Name</a>
                </li>
            </text>
        }
    </ul>
</div>